<div id="topbar">
    <section id="page-title" class="topbar-inner">
        <button type="button" class="navigation-btn">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M2.5 11.5A.5.5 0 0 1 3 11h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 7h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 3h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z" />
            </svg>
        </button>
        <h4>@ViewBag.Title</h4>
    </section>
</div>

<div id="form-area">
    <form id="form" autocomplete="off">
        @{
            await Html.RenderPartialAsync("Section/Decision");}
        <hr class="u-full-width" />
        @{
            await Html.RenderPartialAsync("Section/Forwarding");}
        <hr class="u-full-width" />
        @{
            await Html.RenderPartialAsync("Section/Notes");}
        <hr class="u-full-width" />

        <div class="action-row">
            <div class="row">
                <input class="button button-primary u-pull-right" type="submit" value="Save">
                <input class="button u-pull-right" type="button" value="Cancel">
            </div>
        </div>
    </form>
</div>